<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mobileapp2015.TestboardActivity" >

	<Button
        android:id="@+id/player1_bowl5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:text="0" />

    <Button
        android:id="@+id/player1_bowl4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player1_bowl5"
        android:text="0" />

    <Button
        android:id="@+id/player1_bowl3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player1_bowl4"
        android:text="0" />

    <Button
        android:id="@+id/player1_bowl2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player1_bowl3"
        android:text="0" />

    <Button
        android:id="@+id/player1_bowl1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player1_bowl2"
        android:text="0" />

    <Button
        android:id="@+id/player1_bowl0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/player1_bowl1"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player1_bowl5"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/player1_bowl4"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2_bowl0"
        android:layout_alignBottom="@+id/player2_bowl0"
        android:layout_toRightOf="@+id/player2_bowl0"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2_bowl1"
        android:layout_alignBottom="@+id/player2_bowl1"
        android:layout_toRightOf="@+id/player2_bowl1"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2_bowl2"
        android:layout_alignBottom="@+id/player2_bowl2"
        android:layout_toRightOf="@+id/player2_bowl2"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2_bowl3"
        android:layout_alignBottom="@+id/player2_bowl3"
        android:layout_toRightOf="@+id/player2_bowl3"
        android:text="0" />

    <Button
        android:id="@+id/player2_bowl5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player2_bowl4"
        android:layout_alignBottom="@+id/player2_bowl4"
        android:layout_toRightOf="@+id/player2_bowl4"
        android:text="0" />

    <TextView
        android:id="@+id/player1_tray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1_bowl5"
        android:layout_below="@+id/player1_bowl5"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/player2_tray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player1_tray"
        android:layout_alignBottom="@+id/player1_tray"
        android:layout_alignRight="@+id/player2_bowl5"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
